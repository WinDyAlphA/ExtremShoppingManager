{% extends 'baseNoNav.html.twig' %}

{% block title %}Propose index{% endblock %}

{% block content %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for propose in proposes %}
            <tr>
                <td>{{ propose.id }}</td>
                <td>{{ propose.prix }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_propose_show', {'id': propose.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_propose_edit', {'id': propose.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_propose_new') }}">Create new</a>
{% endblock %}
