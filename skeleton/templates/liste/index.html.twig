{% extends 'base.html.twig' %}

{% block title %}Hello ListeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> {{ liste.titre }} </h1>

    <article class="card">

        <div class="settings card-header">
            <div class="sort row">
                <div class="sort-by col-6">
                    <label>Trier par : </label>
                    <select name="sort-by form-control">
                        <option value="nom">Nom</option>
                        <option value="prix">Prix</option>
                    </select>
                </div>
                <div class="sort-order col-6">
                    <label>Ordre : </label>
                    <select name="sort-order form-control">
                        <option value="asc">Croissant</option>
                        <option value="desc">Décroissant</option>
                    </select>
                </div>
            </div>
        </div>

        <ul class="card-body">
        
        <h2>Liste des articles : </h2><br>
            {% for contient in liste.contient %}
                <li class="form-check" style="list-style-type: none;">
                    <input type="checkbox" name="article" value="{{ contient.propose.article.id }}" class="form-check-input" id="article_{{ contient.propose.article.id }}">
                    <!-- setting icon at the end of the line -->
                    <p style="width: 100%; display: flex; justify-content: space-between"><span>{{ contient.propose.article.nom }} ({{ contient.propose.prix }}€)</span> <i class="fas fa-cog cog-option"></i></p>
                </li>
            {% endfor %}
        </ul>

        <div class="card-footer">
            <!-- Open modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addProdcutModal">
                Ajouter un article
            </button>
            <!-- Modal -->
            <div class="modal fade" id="addProdcutModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addProdcutModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                    </div>
        </div>
    </article>
    <br />
    <button type="submit" class="btn btn-primary">Modifier la liste</button>
</div>
{% endblock %}
