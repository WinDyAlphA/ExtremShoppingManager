{% extends 'base.html.twig' %}

{% block title %}Hello ListeController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; margin-top:11vh; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Création d'une liste </h1>

    <article class="card">

        <div class="card-header">
            <h2>Informations de la liste</h2>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Créer la liste</button>
            {{ form_end(form) }}
        </div>
    </article>
    
</div>
{% endblock %}
